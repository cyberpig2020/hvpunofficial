<form class="{{cssClass}} {{actor.type}} flexcol" autocomplete="off">

  {{!-- Sheet Header --}}
  <header class="sheet-header">
    <img class="profile-img" src="{{actor.img}}" data-edit="img" title="{{actor.name}}" height="100" width="100"/>
    <div class="header-fields">
      <h1 class="charname"><input name="name" type="text" value="{{actor.name}}" placeholder="Name"/></h1>
      {{!-- The grid classes are defined in scss/global/_grid.scss. To use,
      use both the "grid" and "grid-Ncol" class where "N" can be any number
      from 1 to 12 and will create that number of columns.  --}}
        <div class="resources grid grid-3col">

        {{!-- "flex-group-center" is also defined in the _grid.scss file
        and it will add a small amount of padding, a border, and will
        center all of its child elements content and text. --}}
        <div class="resource flex-group-center">
          <label for="system.archetype" class="resource-label text-opaque grid-span-2">{{localize "HVPUNOFFICIAL.CharacterArchetype"}}</label>
          <div class="resource-content flexrow flex-center flex-between">
          <input type="text" name="system.archetype" list="archetypes" value="{{system.archetype}}" data-dtype="text"/>
          <datalist id="archetypes">
              <!--
              <option value="{{localize "HVPUNOFFICIAL.ArchetypeChimera"}}">
              <option value="{{localize "HVPUNOFFICIAL.ArchetypeCyborg"}}">
              <option value="{{localize "HVPUNOFFICIAL.ArchetypeEsoteric"}}">
              <option value="{{localize "HVPUNOFFICIAL.ArchetypeSupersoldier"}}">
              <option value="{{localize "HVPUNOFFICIAL.ArchetypeSymbiont"}}">
              {{!--
                {{#each system.archetypesList}}
                    <option value="{{this}}">CONFIG.BOILERPLATE.archetypes[this] </option>
                {{/each}}
              --}}

            -->

          {{#each system.archetypesList}}
              <option value="{{this.key}}">{{this.label}}</option>
          {{/each}}
          </datalist>
          </div>
        </div>

      <div class="resources grid grid-3col">
        {{!-- "flex-group-center" is also defined in the _grid.scss file
        and it will add a small amount of padding, a border, and will
        center all of its child elements content and text. --}}
        <div class="resource flex-group-center">
          <label for="system.secondaryParameters.vitality.value" class="resource-label text-opaque">
              {{localize "HVPUNOFFICIAL.SecondaryParametersVitality"}}</label>
          <div class="resource-content flexrow flex-center flex-between">
          <input type="number"
                 name="system.secondaryParameters.vitality.value"
                 value="{{system.secondaryParameters.vitality.value}}"
                 data-dtype="Number"
                 placeholder="0"
          />
          <span> / </span>
          <input type="number"
                 name="system.secondaryParameters.vitality.max"
                 value="{{system.secondaryParameters.vitality.max}}"
                 data-dtype="Number"
                 placeholder="0"
          />
          </div>
        </div>

        <div class="resource flex-group-center">
          <label for="system.secondaryParameters.potential.value" class="resource-label text-opaque">
              {{localize "HVPUNOFFICIAL.SecondaryParametersPotential"}}</label>
          <div class="resource-content flexrow flex-center flex-between">
          <input type="number"
                 name="system.secondaryParameters.potential.value"
                 value="{{system.secondaryParameters.potential.value}}"
                 data-dtype="Number"
                 placeholder="0"
          />
          <span> / </span>
          <input type="number"
                 name="system.secondaryParameters.potential.max"
                 value="{{system.secondaryParameters.potential.max}}"
                 data-dtype="Number"
                 placeholder="0"
          />
          </div>
        </div>

        <div class="resource flex-group-center">
          <label for="system.secondaryParameters.shifts.value" class="resource-label text-opaque">
              {{localize "HVPUNOFFICIAL.SecondaryParametersShifts"}}</label>
          <div class="resource-content flexrow flex-center flex-between">
          <input type="number"
                 name="system.secondaryParameters.shifts.value"
                 value="{{system.secondaryParameters.shifts.value}}"
                 data-dtype="Number"/>
          <span> / </span>
          <input type="number"
                 name="system.secondaryParameters.shifts.max"
                 value="{{system.secondaryParameters.shifts.max}}"
                 data-dtype="Number"
                 placeholder="0"
          />
          </div>
        </div>


      </div>

      <div class="resources grid grid-6col">
        <div class="resource flex-group-center">
          <label for="system.exp.current" class="resource-label text-opaque">{{localize "HVPUNOFFICIAL.CharacterExpCurrent"}}</label>
          <div class="resource-content flexrow flex-center flex-between">
          <input type="number"
                 name="system.system.exp.current"
                 value="{{system.exp.free}}"
                 data-dtype="Number"
                 placeholder="0"
          />
          </div>
        </div>
        <div class="resource flex-group-center">
          <label for="system.exp.spent" class="resource-label text-opaque">
              {{localize "HVPUNOFFICIAL.CharacterExpSpent"}}</label>
          <div class="resource-content flexrow flex-center flex-between">
          <input type="number"
                 name="system.system.exp.spent"
                 value="{{system.exp.spent}}"
                 data-dtype="Number"
                 placeholder="0"
          />
          </div>
        </div>
        <div class="resource flex-group-center">
          <label for="system.exp.total" class="resource-label text-opaque">
              {{localize "HVPUNOFFICIAL.CharacterExpTotal"}}</label>
          <div class="resource-content flexrow flex-center flex-between">
          <input type="number"
                 name="system.system.exp.total"
                 value="{{sum system.exp.spent system.exp.free}}"
                 data-dtype="Number"/>
          </div>
        </div>
      </div>
    </div>
  </header>

  {{!-- Sheet Tab Navigation --}}
  <nav class="sheet-tabs tabs" data-group="primary">
    {{!-- Default tab is specified in actor-sheet.mjs --}}
    <a class="item" data-tab="parameters">{{ localize "HVPUNOFFICIAL.parameters"}}</a>
    <a class="item" data-tab="features">Features</a>
    <a class="item" data-tab="description">Description</a>
    <a class="item" data-tab="items">Items</a>
    <a class="item" data-tab="spells">Spells</a>
    <a class="item" data-tab="effects">Effects</a>
  </nav>

